<%= form_tag :search_jobs, method: :get do %>
    <%= label_tag :term %>
    <%= text_field_tag :term %>
    <%= submit_tag 'search for jobs' %>
<% end %>

<% @categories_jobs.each do |c| %>
    <%= c.jobs.count %>
    <strong>
      <%= c.name %>
      <%= link_to c.name, category_jobs_path(c) %>

    </strong>
    <br>
    <% c.jobs.limit_jobs_on(10).first_jobs.each do |job| %>
        <br>
        <%= job.title %>
    <%end %>
    <br>
<% end %>
